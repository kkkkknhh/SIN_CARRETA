{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EvidenceEntry",
  "type": "object",
  "required": ["evidence_id","question_unique_id","content","confidence","stage"],
  "properties": {
    "evidence_id": {"type":"string", "minLength": 1},
    "question_unique_id": {
      "type":"string",
      "pattern":"^P(10|[1-9])-D[1-6]-Q[1-9][0-9]*$"
    },
    "content": {
      "type":"object",
      "required": ["policy","dimension","question","score","rubric_key"],
      "properties": {
        "policy":   {"type":"string","pattern":"^P(10|[1-9])$"},
        "dimension":{"type":"string","pattern":"^D[1-6]$"},
        "question": {"type":"integer","minimum":1},
        "score":    {"type":"number","minimum":0,"maximum":1},
        "rubric_key":{"type":"string","pattern":"^D[1-6]-Q[1-9][0-9]*$"}
      },
      "additionalProperties": true
    },
    "confidence":{"type":"number","minimum":0,"maximum":1},
    "stage":{"type":"string","minLength":1}
  },
  "additionalProperties": false
}
