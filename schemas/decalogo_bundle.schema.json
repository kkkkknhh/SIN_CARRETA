{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DecalogoBundle",
  "type": "object",
  "required": ["version","policies","dimensions","questions","lexicon"],
  "properties": {
    "version":{"type":"string"},
    "policies": {
      "type":"array",
      "items":{"type":"string","pattern":"^P(10|[1-9])$"},
      "minItems": 10, "maxItems": 10
    },
    "dimensions": {
      "type":"array",
      "items":{"type":"string","pattern":"^D[1-6]$"},
      "minItems": 6, "maxItems": 6
    },
    "questions": {
      "type":"array",
      "items":{
        "type":"object",
        "required":["question_unique_id","rubric_key","text"],
        "properties":{
          "question_unique_id":{"type":"string","pattern":"^P(10|[1-9])-D[1-6]-Q[1-9][0-9]*$"},
          "rubric_key":{"type":"string","pattern":"^D[1-6]-Q[1-9][0-9]*$"},
          "text":{"type":"string"}
        },
        "additionalProperties": true
      }
    },
    "lexicon": {
      "type":"object",
      "additionalProperties": {"type":"array","items":{"type":"string"}}
    }
  },
  "additionalProperties": true
}
